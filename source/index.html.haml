        .right
            .instruction
                %p Scratch any orange boxes
            .category.vitals
                %p.rotate Is anyone
                %ol
                    %li Over 60
                    %li Disabled
                    %li Under 18
                    %li Pregnant
            .category.bills
                %p.rotate Billed for
                %ol
                    %li Heat
                    %li A/C
                    %li Water
                    %li Electric
            .category.hh
                %p.rotate Household Members
                %ol
                    %li 8 or more
                    %li 7 members
                    %li 6 members
                    %li 5 members
                    %li 4 members
                    %li 3 members
                    %li 2 members
                    %li 1 member
